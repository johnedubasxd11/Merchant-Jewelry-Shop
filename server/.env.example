# Copy this file to .env and fill values before running the server
# Keep secrets out of source control. Do NOT commit your .env file.

# A JWT secret used to sign authentication tokens. Use a long, random string (>=32 chars).
JWT_SECRET=replace_with_a_long_random_string_at_least_32_chars

# MongoDB connection string (optional). If absent the server will fall back to local JSON data files.
# Example (local Mongo):
# MONGO_URI=mongodb://localhost:27017/try_demo

# Server port (optional)
PORT=4000
